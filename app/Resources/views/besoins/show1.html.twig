{% extends 'base_front.html.twig' %}

{% block container %}

    <center>
        <section id="main-content">
            <h1>Liste des besoins </h1>

            <table class="table table-striped table-advance table-hover"  >
                <thead>
                <tr id="besoins">

                    <th>Categorie</th>
                    <th>Quantite</th>
                    <th>lieu</th>
                    <th>localisation</th>




                </tr>
                </thead>
                <tbody id="myTable">
                {% for besoin in besoins %}
                    <tr id="besoins">

                        <td>{{ besoin.nomBs }}</td>
                        <td>{{ besoin.quantite }}</td>
                        <td>{{ besoin.id_c.lieu.lieu }}</td>

                        <td>
                            <a href="{{ path('camp_local', { 'id': besoin.id_c.id })  }}"><i class="fa fa-map-marker"></a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>


            <div class="navigation">
                {{ knp_pagination_render(besoins) }}
            </div>

            <form class="navbar-form">
                <th> <input type="text" id="myInput" placeholder="Rechercher  ..."></th>



                </button>

            </form>




            <script>
                $(document).ready(function(){
                    $("#myInput").on("keyup", function() {
                        var value = $(this).val().toLowerCase();
                        $("#myTable tr").filter(function() {
                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                        });
                    });
                });
            </script>
        </section>

    </center>
{% endblock %}
