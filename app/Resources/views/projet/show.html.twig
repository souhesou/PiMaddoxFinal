{% extends 'base_front.html.twig' %}

{% block container %}
    <center>
    <h1>Projet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Nomprojet</th>
                <td>{{ projet.nomProjet }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ projet.lieu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if projet.date %}{{ projet.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nombreparticipant</th>
                <td>{{ projet.nombreParticipant }}</td>
            </tr>
        <tr>
            {% if projet.partenaire !=null %}
            <th>IDPartenaire</th>
            <td>{{ projet.partenaire.id }}</td>
            {% else  %}
            <th>Partenaire</th>
            {% endif %}
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('p_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('projet_edit', { 'id': projet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </center>
{% endblock %}
