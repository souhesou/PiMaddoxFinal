{% extends 'base.html.twig' %}
{% block container %}

    <div class="active-pink-3 active-pink-4 mb-4">
        <input class="form-control" type="text" placeholder="Search" aria-label="Search">

    </div>
    <br>
    <br>
    <br>

   <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>UserName</th>
            <th>Age</th>
            <th>Origin</th>
            <th>Action</th>

        </tr>
        </thead>
        <tbody>
        {% for refug in refugie %}
            <tr>
                <td>{{ refug.nom }}</td>
                <td>{{ refug.prenom }}</td>
                <td>{{ refug.age }}</td>
                <td>{{ refug.origine }}</td>
                <td><a href="{{ path('modifier_BRefugie',{'id':refug.id}) }}"><button class="btn btn-primary">Update</button></a> <a href="{{ path('supprimer_BRefugie',{'id':refug.id}) }}"><button class="btn btn-primary">Delete</button></a></td>
            </tr>
        {% endfor %}
        </tbody>
</table>


    <br>

    <div class="col-xs-12" align="right">

        <button class="btn btn-primary btn-icon-text" onclick="window.print();"><i class="mdi mdi-printer btn-icon-append"></i>      IMPRIMER</button>

    </div>

{% endblock %}