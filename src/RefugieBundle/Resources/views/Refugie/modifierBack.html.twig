{% extends 'base.html.twig' %}
{% block container %}

    <form method="post">
        <div class="form-group">
            <label for="formGroupExampleInput">Name</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder':'...'}}) }}        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">UserName</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control','placeholder':'...'}}) }}        </div>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Age</label>
            {{ form_widget(form.age, {'attr': {'class': 'form-control','placeholder':'...'}}) }}        </div>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Origin</label>
            {{ form_widget(form.origine, {'attr': {'class': 'form-control','placeholder':'...'}}) }}        </div>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Camp</label>
            {{ form_widget(form.idcamp, {'attr': {'class': 'form-control','placeholder':'...'}}) }}        </div>
        </div>

        <div class="col-auto my-1">
           <center> <button type="submit" class="btn btn-primary">Update</button></center>
        </div>
    </form>

{% endblock %}